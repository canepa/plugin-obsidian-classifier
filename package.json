{
  "name": "obsidian-auto-tagger",
  "version": "1.0.0",
  "description": "Auto-tag notes using Naive Bayes classifier",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "deploy": "npm run build && powershell -File deploy.ps1",
    "watch": "node esbuild.config.mjs && powershell -File deploy.ps1"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "tagger",
    "classifier"
  ],
  "author": "Alessandro Canepa",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^16.11.6",
    "esbuild": "0.17.3",
    "obsidian": "latest",
    "typescript": "4.7.4"
  }
}
